<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="#e7e7e7">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView_regl_DateReg"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:text="New Text"
        android:textSize="11dp"
        android:layout_marginLeft="3dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView_regl_libelle"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/textView_regl_DateReg"
        android:layout_toEndOf="@+id/textView_regl_DateReg"
        android:layout_marginLeft="10dp"
        android:layout_alignParentEnd="true"
        android:text="New Text"
        android:textIsSelectable="false"
        android:textSize="11dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView_regl_libellebis"
        android:layout_below="@+id/textView_regl_libelle"
        android:layout_alignLeft="@+id/textView_regl_libelle"
        android:layout_alignStart="@+id/textView_regl_libelle"
        android:layout_alignParentEnd="true"
        android:text="New Text"
        android:textSize="11dp" />
</RelativeLayout>